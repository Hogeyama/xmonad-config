
Config { font = "xft:Rounded Mgen+ 1m black:style=regular"
       , bgColor = "#1a1e1b"
       , fgColor = "#676767"
       , position = Static { xpos = 0 , ypos = 0, width = 1920, height = 15 }
       , lowerOnStart = False
       , commands = [ Run Network "wlan0" [ "-t"       , " ↓<rx> : ↑<tx> (Kb/s)"
                                          , "-L"       , "40"
                                          , "-H"       , "200"
                                          , "--normal" , "#d3d7cf"
                                          , "--high"   , "#88b986"
                                          --, "-S"       , "True"
                                          ] 10

                    , Run Cpu             [ "-t"      , "Cpu: <total>%"
                                          , "-L"      , "3"
                                          , "-H"      , "50"
                                          , "--normal", "green"
                                          , "--high"  , "red"
                                          ] 10

                    , Run Memory          [ "-t"       , "Mem: <usedratio>%"
                                          , "-L"       , "40"
                                          , "-H"       , "90"
                                          , "--normal" , "#d3d7cf"
                                          , "--high"   , "#c16666"
                                          ] 10

                    , Run BatteryP        ["BAT0"]
                                          [ "-t"       , "Bat: <acstatus>"
                                          , "-L"       , "20"
                                          , "-H"       , "80"
                                          , "--low"    , "#c16666"
                                          , "--normal" , "#d3d7cf"
                                          , "--"
                                                , "-o" , "<left>% (<timeleft>)"
                                                , "-O" , "Charging <left>%"
                                                , "-i" , "<left>%"
                                          ] 50
                    , Run Com "xmobar-volume" [] "volume" 10
                    , Run Com "dropbox" ["status"] "dropbox" 50
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{≫%wlan0%  ≫%cpu%  ≫%memory%  ≫Dropbox: %dropbox%  ≫%volume%  ≫%battery%  <fc=#c7a273>%date%</fc> "
       }



